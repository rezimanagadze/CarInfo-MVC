@model CarInfo.Models.CarTypeModel.CarTypeModel

<form method="post" asp-action="Delete">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete</h2>
			<hr />
		</div>
        <div class="mb-3">
            <label asp-for="Category"></label>
            <input asp-for="Category" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Image"></label>
            <input asp-for="Image" class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="CarType" asp-action="AllCarType" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

