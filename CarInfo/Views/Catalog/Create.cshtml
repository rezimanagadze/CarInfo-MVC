@model CarInfo.Models.CatalogModel.CatalogModel

<form method="post"  enctype="multipart/form-data" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Catalog</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Mark"></label>
            <input asp-for="Mark" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Country"></label>
            <input asp-for="Country" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Logo" class="custom-file-input"></label>
            <div class="custom-file">
            <input asp-for="Logo" class="custom-file-input" accept="image/*" data-allowed-file-extensions='["jpg", "png" , "jpeg"]' required'  id="customFile">
            <label class="custom-file-label" for="customFile"></label>
            </div>
            <span asp-validation-for="Logo" class="text-danger"></span>
     </div>
</div>
<div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Catalog" asp-action="AllCatalog" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section scripts{  
    <script type="text/javascript">  
        // Add the following code if you want the name of the file appear on select  
        $(".custom-file-input").on("change", function () {  
            var fileName = $(this).val().split("\\").pop();  
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);  
        });  
    </script>  
}  




