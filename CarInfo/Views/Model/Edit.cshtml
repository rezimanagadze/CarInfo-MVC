@model CarInfo.Models.CarModel.CarsModelModel



<form method="post" enctype="multipart/form-data" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Model</h2>
			<hr />
		</div>
        <div class="mb-3">
			<label asp-for="Mark"></label>
			<input asp-for="Mark" class="form-control" />
			<span asp-validation-for="Mark" class="text-danger"></span>
		</div>
        <div class="mb-3">
            <label asp-for="Model"></label>
            <input asp-for="Model" class="form-control" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
            <div class="mb-3">
            <label asp-for="Type"></label>
            <select name="Type"  class="form-control" asp-items="@ViewBag.EditType" ><option value="">--Select--</option></select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
		    <div class="mb-3">
            <label asp-for="Years"></label>
            <input asp-for="Years" class="form-control" />
            <span asp-validation-for="Years" class="text-danger"></span>
        </div>
            <div class="mb-3">
            <label asp-for="Engine"></label>
            <input asp-for="Engine" class="form-control" />
            <span asp-validation-for="Engine" class="text-danger"></span>
        </div>
        </div>
            <div class="mb-3">
            <label asp-for="HorsePower"></label>
            <input asp-for="HorsePower" class="form-control" />
            <span asp-validation-for="HorsePower" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Acceleration"></label>
            <input asp-for="Acceleration" class="form-control" />
            <span asp-validation-for="Acceleration" class="text-danger"></span>
        </div>  
        <div class="mb-3">
            <label asp-for="Consumption"></label>
            <input asp-for="Consumption" class="form-control" />
            <span asp-validation-for="Consumption" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Image" class="custom-file-input"></label>
            <input asp-for="Image" class="custom-file-input" accept="image/*" data-allowed-file-extensions='["jpg", "png" , "jpeg"]' required'  id="customFile" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
		<button type="submit" class="btn btn-primary" style="width:150px">Update</button>
    <a asp-controller="Model" asp-action="AllModel" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
</form>

