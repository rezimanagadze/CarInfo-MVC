@model CarInfo.Models.SuperCarModel.SuperCarModel


<form method="post"  enctype="multipart/form-data" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Model</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Mark"></label>
            <input asp-for="Mark" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Model"></label>
            <input asp-for="Model" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Category"></label>
            <select name="Category"  class="form-control" asp-items="@ViewBag.category" ><option value="">--Select--</option></select>

        </div>
        <div class="mb-3">
            <label asp-for="Years"></label>
            <input asp-for="Years" class="form-control" />
        </div>
          <div class="mb-3">
            <label asp-for="Engine"></label>
            <input asp-for="Engine" class="form-control" />
        </div>
         <div class="mb-3">
            <label asp-for="HorsePower"></label>
            <input asp-for="HorsePower" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="TopSpeed"></label>
            <input asp-for="TopSpeed" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Acceleration"></label>
            <input asp-for="Acceleration" class="form-control" />
        </div>
         <div class="mb-3">
            <label asp-for="Consumption"></label>
            <input asp-for="Consumption" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Image" class="custom-file-input"></label>
        <div class="custom-file">
            <input asp-for="Image" class="custom-file-input" accept="image/*" data-allowed-file-extensions='["jpg", "png" , "jpeg"]' required'  id="customFile">
            <label class="custom-file-label" for="customFile"></label>
        </div>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="SuperCar" asp-action="AllSuperCar" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>
